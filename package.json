{
  "name": "radix-developer-tools",
  "displayName": "Radix Developer Tools",
  "description": "Radix Developer Tools for Visual Studio Code to help you build and deploy Radix applications using Scrypto and The Radix DLT Network.",
  "version": "0.0.1",
  "publisher": "radixdlt",
  "repository": {
    "type": "git",
    "url": "https://github.com/radixdlt/radix-vscode-extension"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "icon": "/src/assets/scrypto-icon.png",
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "radix-developer-tools.helloScrypto",
        "title": "Hello Scrypto"
      }
    ],
    "snippets": [
      {
        "language": "rust",
        "path": "/src/snippets/scrypto-snippets.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "radix-developer-tools",
          "title": "Radix Developer Tools",
          "icon": "/src/assets/scrypto-24x24.svg"
        }
      ]
    },
    "views": {
      "radix-developer-tools": [
        {
          "id": "create-new-project",
          "name": "Create New Project"
        },
        {
          "id": "resim-commands",
          "name": "Resim Commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
